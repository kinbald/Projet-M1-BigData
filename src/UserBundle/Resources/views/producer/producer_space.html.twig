{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}
{% block body %}

    <div id="content">
        <h3 class="section-heading" style="text-align: center">{% trans %}Liste des Produits{% endtrans %}</h3>
        <div class="table-responsive table-template tableau_media">
            <table class="table table-hover">
                <thead class="thead-default">
                <tr class="color-title">
                    <th>{% trans %}Name{% endtrans %}</th>
                    <th>{% trans %}Type{% endtrans %}</th>
                    <th>{% trans %}Volume{% endtrans %}</th>
                    <th>{% trans %}Sugar{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td class="id_user"><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</a></td>
                        <td class="pays">{{ product.discr }}</td>
                        <td class="ville">{{ product.volume }}</td>
                        <td class="ville">{{ product.sugar }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a type="button" class="btn-primary btn-sm"
                                       href="{{ path('producer_space_conditioning', { 'id': product.id }) }}">
                                        {% trans %}Conditioning{% endtrans %}</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>


{% endblock %}
