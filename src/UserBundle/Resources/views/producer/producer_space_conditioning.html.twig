{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div id="content">
    <h3 class="section-heading" style="text-align: center">{% trans %}Conditioning{% endtrans %}</h3>
    <div class="table-responsive table-template tableau_media">
        <table class="table table-hover">
            <thead class="thead-default">
            <tr class="color-title">
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Volume{% endtrans %}</th>
                <th>{% trans %}Unit√©{% endtrans %}</th>
                <th>{% trans %}Prix{% endtrans %}</th>
                <th>{% trans %}Stock{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for conditioningType in product.conditioningTypes %}
                <tr>
                    <td class="id_user">{{ conditioningType.name }}</td>
                    <td class="ville">{{ conditioningType.volumeValue }}</td>
                    <td class="ville">{{ conditioningType.volumeUnit }}</td>
                    <td class="pays">{{ conditioningType.pubPrice }}</td>
                    <td class="statut">{{ conditioningType.stock }}</td>
                    <td>
                        <ul>
                            <li>
                                <a type="button" class="btn-primary btn-sm" href="{{ path('producer_space_conditioning_edit', {'id': conditioningType.id }) }}">{% trans %}Modifier{% endtrans %}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
