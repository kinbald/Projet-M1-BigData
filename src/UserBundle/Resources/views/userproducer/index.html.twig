{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">{% trans %}Userproducers list{% endtrans %}</h3>
            </div>
        </div>
    </div>

<div class="table-responsive table-template">
    <table class="table table-hover">
        <thead class="thead-defautl">
        <tr class="color-title">
            <th>Id</th>
            <th>Siret</th>
            <th>{% trans %}Companyname{% endtrans %}</th>
            <th>{% trans %}City{% endtrans %}</th>
            <th>{% trans %}Country{% endtrans %}</th>
            <th>{% trans %}Phone{% endtrans %}</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for userProducer in userProducers %}
            <tr>
                <td><a href="{{ path('userproducer_show', { 'id': userProducer.id }) }}">{{ userProducer.id }}</a></td>
                <td>{{ userProducer.siret }}</td>
                <td>{{ userProducer.companyName }}</td>
                <td>{{ userProducer.city }}</td>
                <td>{{ userProducer.country }}</td>
                <td>{{ userProducer.phone }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('userproducer_show', { 'id': userProducer.id }) }}">{% trans %}Show{% endtrans %}</a>
                        </li>
                        <li>
                            <a href="{{ path('userproducer_edit', { 'id': userProducer.id }) }}">{% trans %}Edit{% endtrans %}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <ul>
        <li>
            <div class="btn btn-primary btn-circle">
                <a href="{{ path('userproducer_new') }}">{% trans %}Create a new userProducer{% endtrans %}</a>
            </div>
        </li>
    </ul>
{% endblock %}
