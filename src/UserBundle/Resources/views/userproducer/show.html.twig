        </div>

    <div id="boutons">
        <div class="bouton1">
            <a class="btn btn-circle btn-primary" href="{{ path('userproducer_index') }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('userproducer_edit', { 'id': userProducer.id }) }}">{% trans %}Edit{% endtrans %}</a>
        </div>
        {{ form_start(delete_form) }}
        <div class="bouton1">
            <input class="btn btn-circle btn-primary" type="submit" value="{% trans %}Delete{% endtrans %}">
        </div>
        {{ form_end(delete_form) }}
    </div>

