{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/accueil.css') }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        setTimeout(retour,5000);
        function retour() {
            window.location.replace('{{path("homepage")}}')
        }
    </script>
{% endblock %}

{% block body %}
    <div class="text-center">
        {% trans_default_domain 'FOSUserBundle_trad' %}
        <h1>{% trans %}Registration ok{% endtrans %}</h1>
        <p>{% trans %}Redirection{% endtrans %}</p>
    </div>
{% endblock %}
