{% extends "UserBundle:Registration:User.html.twig" %}

{% block fos_user_content %}
    <div id="content">
        <h1>{% trans %}Registration Producer{% endtrans %}</h1>
        {#<form action="{{ path('user_producer_registration') }}" method="POST">#}
        {{ form_start(form) }}
            <div class="form-div">
