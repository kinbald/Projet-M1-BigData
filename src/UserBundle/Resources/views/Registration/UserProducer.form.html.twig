                    {{ form_label(form.phone) }}
                    {{ form_widget(form.phone) }}
                    <span class="form_error">{{ form_errors(form.phone) }}</span>
                </div>
            </div>
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Registration{% endtrans %}" />
        {#</form>#}
        {{ form_end(form) }}
    </div>
{% endblock fos_user_content %}