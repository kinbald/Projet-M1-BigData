{% extends "base.html.twig" %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/validPresse.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('https://maps.googleapis.com/maps/api/js?key=AIzaSyA_6m6Glf1-P7jvVdHZ00e3Ue_EoUNe39g') }}"></script>
    <script src="{{ asset('js/bundle.js') }}"></script>
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}

{% block body %}

    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">Bienvenue dans l'espace presse </h3>
            </div>
        </div>
    </div>

    <div class="tableau_media">
        <table>

            <thead>
            <tr>
                <th>Id</th>
                <th>Nom journaliste</th>
                <th>Justificatif (carte presse ou adresse du blog)</th>
                <th>Droit d'accès au contenu Média</th>
            </tr>
            </thead>

            <tbody>
            {%  for i in 1..20 %}

                <tr>
                    <td class="id">{{ i }}</td>
                    <td class="nom">Arthur Delacroix {{ i }}</td>
                    <td class="justificatif">n°H{{ 356*i }}</td>
                    <td class="droit">Tick</td>
                </tr>

            {% endfor %}
            </tbody>


        </table>
    </div>

    <div>
        {{ form_start(form, {'attr': {'onclick': 'this.submit();'}}) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

{% endblock %}


