{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/validPresse.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">Gestion des droits d'accès à l'espace Presse</h3>
            </div>
        </div>
    </div>
    <div class="tableau_media">
        {{ form_start(form) }}
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom journaliste</th>
                    <th>Justificatif (carte presse)</th>
                    <th>Justificatif (adresse du blog)</th>
                    <th>Droit d'accès au contenu Média</th>
                </tr>
            </thead>
            <tbody>
                {% for media in medias %}
                    <tr>
                        <td class="id">{{ media.id }}</td>
                        <td class="nom">{{ media.companyName }}</td>
                        <td class="justificatif-carte">{{ media.idPresse }}</td>
                        <td class="justificatif-adresse">{{ media.urlBlog }}</td>
                        <td class="droit">{{ form_widget(attribute(form, 'media_'~media.id))}}</td>
                    </tr>
                {% endfor %}
                    <tr>
                        <td colspan="4"></td>
                        <td>{{ form_widget(form.save) }}</td>
                    </tr>
            </tbody>
        </table>
        {{ form_end(form) }}
    </div>
{% endblock %}


