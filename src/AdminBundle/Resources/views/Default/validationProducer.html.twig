{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/validPresse.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">{% trans %}Autorisations Producteurs{% endtrans %}</h3>
            </div>
        </div>
    </div>
    <div id="autorization-producers-form">
        {{ form_start(form) }}
        <div class="table-responsive table-template au-producers">
            <table class="table table-hover">
                <thead class="thead-default">
                <tr class="color-title">
                    <th>Id</th>
                    <th>{% trans %}Num√©ro SIRET{% endtrans %}</th>
                    <th>{% trans %}Nom entreprise{% endtrans %}</th>
                    <th>{% trans %}Adresse{% endtrans %}</th>
                    <th>{% trans %}Ville{% endtrans %}</th>
                    <th>{% trans %}Code Postal{% endtrans %}</th>
                    <th>{% trans %}Autorisation de connexion{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for producer in producers %}
                    <tr>
                        <td class="id">{{ producer.id }}</td>
                        <td class="siret">{{ producer.siret }}</td>
                        <td class="nomCompagnie">{{ producer.companyName }}</td>
                        <td class="address">{{ producer.address }}</td>
                        <td class="ville">{{ producer.city }}</td>
                        <td class="codePostal">{{ producer.postalCode }}</td>
                        <td class="droit">{{ form_widget(attribute(form, 'producer_'~producer.id))}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="6"></td>
                    <td>{{ form_widget(form.save) }}</td>
                </tr>
                </tbody>
            </table>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}