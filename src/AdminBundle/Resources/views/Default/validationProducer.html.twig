{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/validPresse.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('https://maps.googleapis.com/maps/api/js?key=AIzaSyA_6m6Glf1-P7jvVdHZ00e3Ue_EoUNe39g') }}"></script>
    <script src="{{ asset('js/bundle.js') }}"></script>
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}

{% block body %}


    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">Autorisations Producteurs</h3>
            </div>
        </div>
    </div>

    {{ form_start(form) }}
    <table>

        <thead>
            <tr>
                <th>Id</th>
                <th>Num√©ro SIRET</th>
                <th>Nom entreprise</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Autorisation de connexion</th>
            </tr>
        </thead>



        <tbody>

            {% for producer in producers %}
                <tr>
                    <td class="id">{{ producer.id }}</td>
                    <td class="siret">{{ producer.siret }}</td>
                    <td class="nomCompagnie">{{ producer.companyName }}</td>
                    <td class="address">{{ producer.address }}</td>
                    <td class="ville">{{ producer.city }}</td>
                    <td class="codePostal">{{ producer.postalCode }}</td>
                    <td class="droit">{{ form_widget(attribute(form, 'producer_'~producer.id))}}</td>
                </tr>
            {% endfor %}

            <tr>
                <td colspan="6"></td>
                <td>{{ form_widget(form.save) }}</td>
            </tr>

        </tbody>

    </table>

    {{ form_end(form) }}

{% endblock %}