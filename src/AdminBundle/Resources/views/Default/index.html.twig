            <a class="btn btn-primary btn-circle" href="{{ path('purchase_index') }}">
                <div class="texte">{% trans %}Gestion des Commandes{% endtrans %}</div>
            </a>

        </div>
        <hr/>
        <h4>{% trans %}Gestion de l'Espace Presse{% endtrans %}</h4>
        <div class="text-center">
            <a class="btn btn-primary btn-circle" href="{{ path('news_index') }}">
                <div class="texte">{% trans %}News{% endtrans %}</div>
            </a>
            <a class="btn btn-primary btn-circle" href="{{ path("files_index") }}">
                <div class="texte">{% trans %}Gestion des Communiqués{% endtrans %}</div>
            </a>
            <a class="btn btn-primary btn-circle" href="{{ path("validationPresse") }}">
                <div class="texte">{% trans %}Gestion des Accréditations{% endtrans %}</div>
            </a>
        </div>
    </div>
{% endblock %}


