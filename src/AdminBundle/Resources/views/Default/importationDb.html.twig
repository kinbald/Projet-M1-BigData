{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/admin.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('uploader/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('uploader/js/uploader.js') }}"></script>
    <script type="text/javascript">
        var uploader = new Uploader("chemin");
        $("#button").fancybox({
        'fitToView'         : false,
        'width'             : '75%',
        'height'            : '80%',
        'autoScale'         : false,
        'autoSize'          : false,
        'transitionIn'      : 'elastic',
        'transitionOut'     : 'elastic',
        'type'              : 'iframe'
    });
    </script>
{% endblock %}

{% block body %}
    <div class="text-center" id="center-and-marges">
        <h1>Importation Excel</h1>
        <div class="text-center">
            <p>Utilisez cette page pour importer un fichier excel correctement formaté et l'utiliser pour actualiser les
                données du site.</p>
            <a class="btn btn-primary">
                <div class="texte">Envoyer</div>
            </a>
            <input type="text" id="chemin">
            <a id="button" href="{{ asset('uploader/fancybox.php') }}?iframe">Open iframe</a>
        </div>
    </div>
{% endblock %}
