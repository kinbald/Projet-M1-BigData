{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    <div class="contour">
        <div id="content">
            <h1 class="espace_br">{% trans %}Medal creation{% endtrans %}</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}
        </div>
    </div>

    <div class="center">
        <input class="btn btn-primary btn-circle col-md-6" type="submit" value="{% trans %}Create{% endtrans %}"/>
        {{ form_end(form) }}

        <ul>
            <li>
                <a class="btn btn-circle btn-primary col-md-6" href="{{ path('medal_index') }}">{% trans %}Back to the list{% endtrans %}</a>
            </li>
        </ul>
    </div>
{% endblock %}
