{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medal</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ medal.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ medal.name }}</td>
        </tr>
        <tr>
            <th>Annee</th>
            <td>{{ medal.annee }}</td>
        </tr>
        <tr>
            <th>Url</th>
            <td>{{ medal.url }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('medal_edit', { 'id': medal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
