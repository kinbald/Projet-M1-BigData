{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">


        <h3 class="section-heading" style="align-content: center">Medal</h3>
        <div class="table-responsive table-template">
            <table class="table table-hover">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ medal.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ medal.name }}</td>
                </tr>
                <tr>
                    <th>Annee</th>
                    <td>{{ medal.annee }}</td>
                </tr>
                <tr>
                    <th>Url</th>
                    <td>{{ medal.url }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <ul>
            <li>
                <a href="{{ path('medal_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('medal_edit', { 'id': medal.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>

    </div>

{% endblock %}
