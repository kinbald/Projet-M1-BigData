{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/contour_blanc.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="contour">
        <div id="content">
            <h1 class="espace_br">{% trans %}Competition creation{% endtrans %}</h1>

            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>


    <div id="boutons">
        <div class="bouton1">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Create{% endtrans %}" />
            {{ form_end(form) }}
        </div>


        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('competition_index') }}">{% trans %}Back to the list{% endtrans %}</a>

        </div>
    </div>

{% endblock %}
