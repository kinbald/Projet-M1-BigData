{% extends 'base.html.twig' %}

{% block body %}
    <h1>Competition</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ competition.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ competition.name }}</td>
        </tr>
        <tr>
            <th>Datecompetition</th>
            <td>{% if competition.dateCompetition %}{{ competition.dateCompetition|date('Y-m-d') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ competition.description }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('competition_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('competition_edit', { 'id': competition.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
