{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('uploader/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('uploader/js/uploader.js') }}"></script>
    <script type="text/javascript">
        var uploader = new Uploader("chemin");
        $("#button").fancybox({
            'fitToView': false,
            'width': '75%',
            'height': '80%',
            'autoScale': false,
            'autoSize': false,
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'type': 'iframe'
        });
    </script>
{% endblock %}

{% block body %}

<div class="contour">
    <div id="content">
        <h1 class="espace_br">{% trans %}Edition Communiqu√©s{% endtrans %}</h1>

            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">{% trans %}Link a file{% endtrans %}</a>
            <input type="text" id="chemin" name="urlImg">
            <div class="bouton1">
                <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Edit{% endtrans %}" />
            </div>
            {{ form_end(edit_form) }}
    </div>
</div>


