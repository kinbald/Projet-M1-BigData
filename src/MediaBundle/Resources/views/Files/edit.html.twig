        {{ form_end(delete_form) }}
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('files_index') }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>
    </div>
{% endblock %}
