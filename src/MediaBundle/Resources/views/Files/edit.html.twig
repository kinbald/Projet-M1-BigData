{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('uploader/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('uploader/js/uploader.js') }}"></script>
    <script type="text/javascript">
        var uploader = new Uploader("chemin");
        $("#button").fancybox({
            'fitToView': false,
            'width': '75%',
            'height': '80%',
            'autoScale': false,
            'autoSize': false,
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'type': 'iframe'
        });
    </script>

{% endblock %}

{% block body %}
    <div id="content">
        <h1>Edition Communiqu√©s</h1>
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <a id="clic" id="button" href="{{ asset('uploader/fancybox.php') }}?iframe">Link a file</a>
        <input type="text" id="chemin" name="urlImg">

        <table>
            <td>
                <input class="btn btn-primary btn-circle" type="submit" value="Edit"/>
                {{ form_end(edit_form) }}
            </td>
            <td>
                <a  class="btn btn-primary btn-circle" href="{{ path('files_index') }}">Back to the list</a>
            </td>
            {{ form_start(delete_form) }}
            <td>
                <input class="btn btn-primary btn-circle" type="submit" value="Delete">
            </td>
            {{ form_end(delete_form) }}
        </table>
    </div>
{% endblock %}
