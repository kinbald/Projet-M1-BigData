{% extends 'base.html.twig' %}

{% block body %}
    <br><br>
    <h1 style="text-align: center">{% trans %}Le paiement a réussi{% endtrans %} !</h1>
    <br><br>
    <p style="text-align: center">{% trans %}Merci d'avoir choisi BoxOfficeWines{% endtrans %} ! <a href="{{ path("homepage") }}">{% trans %}Retour à la page d'accueil{% endtrans %}</a>.</p>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript">
        var panier = JSON.parse(window.localStorage.getItem('panier'));
        if(panier != null){
            panier = null;
            window.localStorage.setItem('panier', JSON.stringify(panier));
        }
    </script>
{% endblock %}