{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
        <h1>{% trans %}News creation{% endtrans %}</h1>
        <br><br>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <br>
        <table>
            <td>
                <input class="btn btn-primary btn-circle" type="submit" value="Create" />
            </td>
            {{ form_end(form) }}
            <td>
                <a class="btn btn-primary btn-circle" href="{{ path('news_index') }}">{% trans %}Back to the list{% endtrans %}</a>
            </td>
        </table>
    </div>
{% endblock %}
