{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/contour_blanc.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="Contour_blanc">
        <div id="content">
            <h3 class="section-heading">{% trans %}News edit{% endtrans %}</h3>
            <br><br>
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}

            <div id="boutons">
                <div class="bouton1">
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                    <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Edit{% endtrans %}" />
                    {{ form_end(edit_form) }}
                </div>
                {{ form_start(delete_form) }}
                <div class="bouton1">
                    <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Delete{% endtrans %}">
                </div>
                {{ form_end(delete_form) }}
                <div class="bouton1">
                    <a class="btn btn-primary btn-circle" href="{{ path('competition_index') }}">{% trans %}Back to the list{% endtrans %}</a>
                </div>
            </div>
            <div class="espace-bas" style="visibility: hidden;">...</div>
        </div>
    </div>
{% endblock %}
