{% extends 'base.html.twig' %}

{% block body %}
    <h1>Purchase</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ purchase.id }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ purchase.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ purchase.city }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ purchase.postalCode }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ purchase.country }}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{% if purchase.done %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Dateorder</th>
                <td>{% if purchase.dateOrder %}{{ purchase.dateOrder|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('purchase_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('purchase_edit', { 'id': purchase.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
