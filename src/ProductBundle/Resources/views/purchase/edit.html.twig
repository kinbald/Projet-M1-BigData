{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

<div class="contour">
    <div id="content">
        <h1 class="espace_br">{% trans %}Edit Purchase{% endtrans %}</h1>
         {{ form_start(edit_form, {'attr': {'id': 'form_purchase_edit'}}) }}
         {{ form_widget(edit_form) }}
        {{ form_end(edit_form) }}
    </div>
</div>

    <div id="boutons">
        <div class="bouton1">
            <button class="btn btn-primary btn-circle"  onclick="$('#form_purchase_edit').submit()">{% trans %}Edit{% endtrans %}</button>
        </div>

        {{ form_start(delete_form) }}
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Delete{% endtrans %}">
        </div>
        {{ form_end(delete_form) }}
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('purchase_index') }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>
    </div>

{% endblock %}
