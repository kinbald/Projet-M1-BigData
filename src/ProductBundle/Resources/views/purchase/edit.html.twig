{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content"></div>
        <h1>Purchase edit</h1>
        <br><br>
        {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <table id="tableau">
            <td>
            <input class="btn btn-primary btn-circle" type="submit" value="Edit" />
            </td>
            {{ form_end(edit_form) }}
            <td>
                <a class="btn btn-primary btn-circle" href="{{ path('purchase_index') }}">Back to the list</a>
            </td>
            <td>
                {{ form_start(delete_form) }}
                <input class="btn btn-primary btn-circle" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </td>
        </table>
    </div>
{% endblock %}
