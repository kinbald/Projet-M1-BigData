{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/product.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">{% trans %}Gestion des commandes{% endtrans %}</h3>
            </div>
        </div>
    </div>
    <br> <br>
    <div class="tableau_media">
        <h3 class="type_commande">Commandes en cours</h3>
        <table>
            <thead>
                <tr>
                    <th>{% trans %}ID commande{% endtrans %}</th>
                    <th>{% trans %}ID user{% endtrans %}</th>
                    <th>{% trans %}Adresse{% endtrans %}</th>
                    <th>{% trans %}Ville{% endtrans %}</th>
                    <th>{% trans %}Code postal{% endtrans %}</th>
                    <th>{% trans %}Pays{% endtrans %}</th>
                    <th>{% trans %}Date de commande{% endtrans %}</th>
                    <th>{% trans %}Statut{% endtrans %}</th>
                    <th>{% trans %}Action{% endtrans %}</th>
                </tr>
            </thead>
            <tbody>
                {% for purchase in purchases %}
                {% if purchase.done %}
                <tr>
                    <td class="id_commande"> {{ purchase.id }}</td>
                    <td class="id_user">{{ purchase.user }}</td>
                    <td class="adresse">{{ purchase.address }}</td>
                    <td class="ville">{{ purchase.city }}</td>
                    <td class="code_postal">{{ purchase.postalCode }}</td>
                    <td class="pays">{{ purchase.country }}</td>
                    <td class="date_commande">{% if purchase.dateOrder %}{{ purchase.dateOrder | date('Y-m-d H:i:s') }} {% endif %}</td>
                    <td class="statut">En cours</td>
                    <td class="action">
                        <ul>
                            <li><a href="{{ path('purchase_show', { 'id': purchase.id }) }}">show</a></li>
                            <li><a href="{{ path('purchase_edit', { 'id': purchase.id }) }}">edit</a></li>
                        </ul>
                    </td>
                </tr>
                {% endif %}
                {% endfor %}
            </tbody>
        </table>
        <br><br>
        <h3 class="type_commande">Commandes terminées</h3>
        <table>
            <thead>
            <tr>
                <th>ID commande</th>
                <th>ID user</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Pays</th>
                <th>Date de commande</th>
                <th>Statut</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for purchase in purchases %}
            {% if purchase.done %}
            {% else %}
                <tr>
                    <td class="id_commande"> {{ purchase.id }}</td>
                    <td class="id_user">{{ purchase.user }}</td>
                    <td class="adresse">{{ purchase.address }}</td>
                    <td class="ville">{{ purchase.city }}</td>
                    <td class="code_postal">{{ purchase.postalCode }}</td>
                    <td class="pays">{{ purchase.country }}</td>
                    <td class="date_commande">{% if purchase.dateOrder %}{{ purchase.dateOrder | date('Y-m-d H:i:s') }} {% endif %}</td>
                    <td class="statut">Effectué</td>
                    <td class="action">
                        <ul>
                            <li><a href="{{ path('purchase_show', { 'id': purchase.id }) }}">show</a></li>
                            <li><a href="{{ path('purchase_edit', { 'id': purchase.id }) }}">edit</a></li>
                        </ul>
                    </td>
                </tr>
            {% endif %}
            {% endfor %}
            </tbody>
        </table>
        <br><br>
        <ul>
            <li>
                <div class="btn btn-primary btn-circle"><a href="{{ path('purchase_new', {type: 'purchase'}) }}">{% trans %}Create a new purchase{% endtrans %}</a></div>
            </li>
        </ul>
    </div>
{% endblock %}










