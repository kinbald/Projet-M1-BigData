{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
        <h1>{% trans %}Productconditioning creation{% endtrans %}</h1>
        <br><br>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div id="boutons">
            <div class="bouton1">
                <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Create{% endtrans %}" />
            </div>
            {{ form_end(form) }}

            <div class="bouton1">
                <a class="btn btn-primary btn-circle" href="{{ path('conditioning_index') }}">{% trans %}Back to the list{% endtrans %}</a>
            </div>

        </div>
    </div>
{% endblock %}
