{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productconditioning</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productConditioning.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ productConditioning.name }}</td>
            </tr>
            <tr>
                <th>Public price</th>
                <td>{{ productConditioning.pubPrice }}</td>
            </tr>
            <tr>
                <th>Pro price</th>
                <td>{{ productConditioning.proPrice }}</td>
            </tr>
            <tr>
                <th>Volume value</th>
                <td>{{ productConditioning.volumeValue }}</td>
            </tr>
            <tr>
                <th>Volume unit</th>
                <td>{{ productConditioning.volumeUnit }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ productConditioning.stock }}</td>
            </tr>
            <tr>
                <th>Pack</th>
                <td>{% if productConditioning.pack is not null %}Yes{% else %}No{% endif %}</td>
            </tr>
            {% if productConditioning.pack is not null %}
                <tr>
                    <th>Pack name</th>
                    <td>productConditioning.pack.name</td>
                </tr>
                <tr>
                    <th>Quantity in pack</th>
                    <td>productConditioning.pack.quantityIn</td>
                </tr>

            {% endif %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conditioning_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conditioning_edit', { 'id': productConditioning.id }) }}">Edit</a>
        </li>
        {% if not has_purchases %}
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
