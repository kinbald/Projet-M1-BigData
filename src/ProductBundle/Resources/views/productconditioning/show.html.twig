{% extends 'base.html.twig' %}

{% block body %}
    <h1>Productconditioning</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ productConditioning.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ productConditioning.name }}</td>
            </tr>
            <tr>
                <th>Pubprice</th>
                <td>{{ productConditioning.pubPrice }}</td>
            </tr>
            <tr>
                <th>Proprice</th>
                <td>{{ productConditioning.proPrice }}</td>
            </tr>
            <tr>
                <th>Volumevalue</th>
                <td>{{ productConditioning.volumeValue }}</td>
            </tr>
            <tr>
                <th>Volumeunit</th>
                <td>{{ productConditioning.volumeUnit }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ productConditioning.stock }}</td>
            </tr>
            <tr>
                <th>Pack</th>
                <td>{% if productConditioning.pack %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conditioning_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conditioning_edit', { 'id': productConditioning.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
