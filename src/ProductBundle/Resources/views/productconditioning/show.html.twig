{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/show.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">

    <h2 class="titre">{% trans %}Productconditioning{% endtrans %}</h2>

<div class="table-responsive product-conditioning">
    <table class="table table-hover">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ productConditioning.id }}</td>
        </tr>
        <tr>
            <th>{% trans %}Name{% endtrans %}</th>
            <td>{{ productConditioning.name }}</td>
        </tr>
        <tr>
            <th>{% trans %}Pubprice{% endtrans %}</th>
            <td>{{ productConditioning.pubPrice|number_format(2,'.',',') }} €</td>
        </tr>
        <tr>
            <th>{% trans %}Proprice{% endtrans %}</th>
            <td>{{ productConditioning.proPrice|number_format(2,'.',',') }} €</td>
        </tr>
        <tr>
            <th>{% trans %}Volumevalue{% endtrans %}</th>
            <td>{{ productConditioning.volumeValue }}</td>
        </tr>
        <tr>
            <th>{% trans %}Volumeunit{% endtrans %}</th>
            <td>{{ productConditioning.volumeUnit }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ productConditioning.stock }}</td>
        </tr>
        <tr>
            <th>Pack</th>
            <td>{% if productConditioning.pack is not null %}Yes{% else %}No{% endif %}</td>
        </tr>
        {% if productConditioning.pack is not null %}
            <tr>
                <th>{% trans %}Pack name{% endtrans %}</th>
                <td>{{ productConditioning.pack.name }}</td>
            </tr>
            <tr>
                <th>{% trans %}Quantity in pack{% endtrans %}</th>
                <td>{{ productConditioning.pack.quantityIn }}</td>
            </tr>

        {% endif %}
        </tbody>
    </table>
</div>

        <div id="boutons">
            <div class="bouton1">
                <a class="btn btn-primary btn-circle" href="{{ path('conditioning_edit', { 'id': productConditioning.id }) }}">{% trans %}Edit{% endtrans %}</a>
            </div>
            {% if not has_purchases %}
                <div class="bouton1">
                    {{ form_start(delete_form) }}
                    <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Delete{% endtrans %}">
                    {{ form_end(delete_form) }}
                </div>
            {% endif %}
            <div class="bouton1">
                <a class="btn btn-primary btn-circle" href="{{ path('conditioning_index') }}">{% trans %}Back to the list{% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}
