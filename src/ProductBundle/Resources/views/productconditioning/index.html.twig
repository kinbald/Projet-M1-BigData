{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
    <h3 class="section-heading" style="text-align: center">{% trans %}Product conditionings list{% endtrans %}</h3>
<div class="table-responsive table-template tableau_product">
    <table class="table table-hover">
        <thead class="thead-default">
            <tr class="color-title">
                <th>Id</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th>{% trans %}Pubprice{% endtrans %}</th>
                <th>{% trans %}Proprice{% endtrans %}</th>
                <th>{% trans %}Volumevalue{% endtrans %}</th>
                <th>{% trans %}Volumeunit{% endtrans %}</th>
                <th>Stock</th>
                <th>Pack</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for productConditioning in productConditionings %}
            <tr>
                <td><a href="{{ path('conditioning_show', { 'id': productConditioning.id }) }}">{{ productConditioning.id }}</a></td>
                <td>{{ productConditioning.name }}</td>
                <td>{{ productConditioning.pubPrice }}</td>
                <td>{{ productConditioning.proPrice }}</td>
                <td>{{ productConditioning.volumeValue }}</td>
                <td>{{ productConditioning.volumeUnit }}</td>
                <td>{{ productConditioning.stock }}</td>
                <td>{% if productConditioning.pack %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('conditioning_show', { 'id': productConditioning.id }) }}">{% trans %}Show{% endtrans %}</a>
                        </li>
                        <li>
                            <a href="{{ path('conditioning_edit', { 'id': productConditioning.id }) }}">{% trans %}Edit{% endtrans %}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
        <br>
        <ul>
            <li>
                <a class="btn btn-primary btn-circle" href="{{ path('conditioning_new') }}">{% trans %}New Conditioning{% endtrans %}</a>
            </li>
        </ul>
    </div>
{% endblock %}
