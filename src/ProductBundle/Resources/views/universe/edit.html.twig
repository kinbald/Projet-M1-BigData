{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet"/>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div id="contenu">
        <div class="contour" id="content">
            <h2>{% trans %}Edit Universe{% endtrans %}</h2>

            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">{% trans %}Load a picture{% endtrans %}</a>
            <input type="text" id="chemin" name="urlImg">
        </div>
    </div>

    <div id="boutons">
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Edit{% endtrans %}" />
        </div>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Delete{% endtrans %}">
        </div>
        {{ form_end(delete_form) }}
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('universe_index') }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>
    </div>

    <div class="espace-bas"></div>

{% endblock %}
