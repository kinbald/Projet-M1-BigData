{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
{% endblock %}
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"
            integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
            crossorigin="anonymous"></script>
    <script type="text/javascript" src="{{ asset('uploader/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('uploader/js/uploader.js') }}"></script>
    <script type="text/javascript">
        var uploader = new Uploader("chemin");
        $("#button").fancybox({
            'fitToView': false,
            'width': '75%',
            'height': '80%',
            'autoScale': false,
            'autoSize': false,
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'type': 'iframe'
        });
    </script>
{% endblock %}

{% block body %}

    <div id="contenu">
        <div id="content">
            <h1>Universe creation</h1>
            <br><br>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">Load a picture</a>
            <input type="text" id="chemin" name="urlImg" required>
        </div>
    </div>


    <div id="boutons">
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="Create" />
        </div>
        {{ form_end(form) }}

        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('universe_index') }}">Back to the list</a>
        </div>

    </div>

    <div class="espace-bas"></div>

{% endblock %}