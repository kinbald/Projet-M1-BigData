{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />

{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

<div class="contour">
    <div id="content">

            <h1>{% trans %}Create Wine{% endtrans %}</h1>
            <br><br>
            {{ form_start(form) }}
            {{ form_widget(form) }}

            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">{% trans %}Load a picture{% endtrans %}</a>
            <input type="text" id="chemin" name="urlImg" required>

        </div>
    </div>



    <div id="boutons">
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="{% trans %}Create{% endtrans %}" />
        </div>
        {{ form_end(form) }}

        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('product_list', {type: 'wine'}) }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>

    </div>


    <div class="espace-bas"></div>
{% endblock %}
