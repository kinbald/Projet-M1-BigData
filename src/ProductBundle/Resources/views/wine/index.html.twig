{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">Product list</h3>
            </div>
        </div>
    </div>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Milésime</th>
                <th>Couleur</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for wine in products %}
                <tr>
                    <td class="id"><a href="{{ path('product_show', { 'id': wine.id }) }}">{{ wine.id }}</a></td>
                    <td class="name">{{ wine.name }}</td>
                    <td class="vintage">{% if wine.vintage %}{{ wine.vintage|date('Y') }}{% endif %}</td>
                    <td class="color">{{ wine.color }}</td>
                    <td class="price">{{ wine.price }} €</td>
                    <td class="price">{{ wine.stock }}</td>
                    <td class="actions">
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'id': wine.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('product_edit', { 'id': wine.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <br><br>
    <ul>
        <li>
            <div class="btn btn-primary btn-circle"><a href="{{ path('product_new', {type: 'wine'}) }}">Create a new wine</a></div>
        </li>
    </ul>

{% endblock %}
