{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/index.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
    <h1>Wines list</h1>
    <br><br>
    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Vintage</th>
                <th>Color</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for wine in wines %}
            <tr>
                <td><a href="{{ path('wine_show', { 'id': wine.id }) }}">{{ wine.id }}</a></td>
                <td>{% if wine.vintage %}{{ wine.vintage|date('Y-m-d') }}{% endif %}</td>
                <td>{{ wine.color }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('wine_show', { 'id': wine.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('wine_edit', { 'id': wine.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    <ul>
        <li>
            <div class="btn btn-primary btn-circle"><a href="{{ path('wine_new') }}">Create a new wine</a></div>
        </li>
    </ul>
    </div>
{% endblock %}
