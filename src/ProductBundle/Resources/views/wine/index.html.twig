{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="container overflow-hidden">
        <div class="row">
            <div class="col-md-12">
                <h3 class="section-heading">{% trans %}Gestion des Vins{% endtrans %}</h3>
            </div>
        </div>
    </div>
    <br><br>
    <div class="table-responsive table-template tableau-vins">
        <table class="table table-hover">
            <thead class="thead-default">
            <tr class="color-title">
                <th>{% trans %}ID{% endtrans %}</th>
                <th>{% trans %}Nom{% endtrans %}</th>
                <th>{% trans %}MillÃ©sime{% endtrans %}</th>
                <th>{% trans %}Couleur{% endtrans %}</th>
                <th>{% trans %}Actions{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
            {% for wine in products %}
                <tr>
                    <td class="id"><a href="{{ path('product_show', { 'id': wine.id }) }}">{{ wine.id }}</a></td>
                    <td class="name">{{ wine.name }}</td>
                    <td class="vintage">{% if wine.vintage %}{{ wine.vintage|date('Y') }}{% endif %}</td>
                    <td class="color">{{ wine.color }}</td>
                    <td class="actions">
                        <ul>
                            <li>
                                <a href="{{ path('product_show', { 'id': wine.id }) }}">{% trans %}Fiche
                                    produit{% endtrans %}</a>
                            </li>
                            <li>
                                <a href="{{ path('product_edit', { 'id': wine.id }) }}">{% trans %}
                                    Modifier{% endtrans %}</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <br><br>
    <ul>
        <li>
            <a href="{{ path('product_new', {type: 'wine'}) }}">
                <div class="btn btn-primary btn-circle">{% trans %}Ajouter un Vin{% endtrans %}</div>
            </a>
        </li>
    </ul>

{% endblock %}
