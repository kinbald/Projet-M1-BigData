{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/edit.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div id="contenu">
        <div id="content">
            <h1>Wine edit</h1>
            <br><br>
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}

            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">Load a picture</a>
            <input type="text" id="chemin" name="urlImg" required>

            <br>
            <table>
                {% for picture in pictures %}

                    <tr>
                        <td class="url">{{ picture.url }}</td>
                        <td><div class="pic1"><a href="{{ asset(picture.url) }}"><img src="/img/adminlogo/eye.png" alt="preview" style="height: 30px;"></a></div></td>
                        <td><div class="pic1"><img src="/img/adminlogo/trash.png" alt="delete"  style="height: 30px;></div></td>
                        <td class="supprimer"></td>
                    </tr>

                {% endfor %}
            </table>

        </div>
    </div>

    <div id="boutons">
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="Edit" />
        </div>
        {{ form_end(edit_form) }}
        {{ form_start(delete_form) }}
        <div class="bouton1">
            <input class="btn btn-primary btn-circle" type="submit" value="Delete">
        </div>
        {{ form_end(delete_form) }}
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('product_list', {type: 'wine'}) }}">Back to the list</a>
        </div>
    </div>

    <div class="espace-bas"></div>

{% endblock %}
