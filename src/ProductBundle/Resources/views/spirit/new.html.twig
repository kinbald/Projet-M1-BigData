{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/create.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/formulaire.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('uploader/fancybox/source/jquery.fancybox.css') }}">
    <link href="{{ asset('css/mise_en_page_admin.css') }}" rel="stylesheet" />

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('uploader/fancybox/source/jquery.fancybox.pack.js') }}"></script>
    <script type="text/javascript" src="{{ asset('uploader/js/uploader.js') }}"></script>
    <script type="text/javascript">
        var uploader = new Uploader("chemin");
        $("#button").fancybox({
            'fitToView': false,
            'width': '75%',
            'height': '80%',
            'autoScale': false,
            'autoSize': false,
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'type': 'iframe'
        });
    </script>
{% endblock %}

{% block body %}

    <div class="contour">
        <div id="content">
            <h1 class="espace_br">{% trans %}Create Spirit{% endtrans %}</h1>
            {{ form_start(form, {'attr': {'id': 'form_spirit_new'}}) }}
            {{ form_widget(form) }}

            <a  id="button" class="clic" href="{{ asset('uploader/fancybox.php') }}?iframe">{% trans %}Load a picture{% endtrans %}</a>
            <input type="text" id="chemin" name="urlImg" required>
            {{ form_end(form) }}
        </div>
    </div>


    <div id="boutons">

        <div class="bouton1">
            <button class="btn btn-primary btn-circle" type="button" value="" onclick="$('#form_spirit_new').submit()" >{% trans %}Create{% endtrans %}</button>
        </div>
        <div class="bouton1">
            <a class="btn btn-primary btn-circle" href="{{ path('product_list', {type: 'spirit'}) }}">{% trans %}Back to the list{% endtrans %}</a>
        </div>

    </div>

{% endblock %}
