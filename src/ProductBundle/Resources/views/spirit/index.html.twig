{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/media.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/table-template.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
        <h3 class="section-heading">{% trans %}Gestion des Spiritueux{% endtrans %}</h3>
    <br><br>
        <div class="table-responsive table-template tableau-spiritueux">
            <table class="table table-hover">
                <thead class="thead-default">
                <tr class="color-title">
                    <th>{% trans %}ID{% endtrans %}</th>
                    <th>{% trans %}Nom{% endtrans %}</th>
                    <th>{% trans %}Prix{% endtrans %}</th>
                    <th>{% trans %}Stock{% endtrans %}</th>
                    <th>{% trans %}Actions{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for spirit in products %}
                    <tr>
                        <td class="id"><a href="{{ path('product_show', { 'id': spirit.id }) }}">{{ spirit.id }}</a></td>
                        <td class="degree">{{ spirit.name }}</td>
                        <td class="price">{{ spirit.price }} â‚¬</td>
                        <td class="stock">{{ spirit.stock }}</td>
                        <td class="actions">
                            <ul>
                                <li>
                                    <a href="{{ path('product_show', { 'id': spirit.id }) }}">{% trans %}Fiche
                                        produit{% endtrans %}</a>
                                </li>
                                <li>
                                    <a href="{{ path('product_edit', { 'id': spirit.id }) }}">{% trans %}
                                        Modifier{% endtrans %}</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    <br><br>
        <ul>
            <li>
                <a href="{{ path('product_new', { 'type' : 'spirit'}) }}">
                    <div class="btn btn-primary btn-circle">{% trans %}Ajouter un Spiritueux{% endtrans %}</div>
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
