{% extends 'baseadmin.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/bootstrap-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/theme-dark.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/index.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div id="content">
    <h1>Spirits list</h1>
    <br><br>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du produit/th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spirit in products %}
            <tr>
                <td class="id"><a href="{{ path('product_show', { 'product': spirit.discr,  'id': spirit.id }) }}">{{ spirit.id }}</a></td>
                <td class="degree">{{ spirit.name }}</td>
                <td class="actions">
                    <ul>
                        <li>
                            <a href="{{ path('product_show', { 'product': spirit.discr,  'id': spirit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('product_edit', { 'product': spirit.discr, 'id': spirit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br><br>
    <ul>
        <li>
            <div class="btn btn-primary btn-circle"><a href="{{ path('product_new', { 'type' : 'spirit'}) }}">Create a new spirit</a></div>
        </li>
    </ul>
    </div>
{% endblock %}
